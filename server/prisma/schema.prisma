generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Feedback {
  id String @id @default(uuid()) //defines primary key and id as Universal Unique ID 

  type       String
  comment    String
  screenshot String? //it's optional

  @@map("feedbacks")
}
